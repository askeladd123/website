---
const { title, iframe_link } = Astro.props;
---

<style>
  .iframe-container {
    width: 100%;
    height: 600px;
    overflow: hidden;
    position: relative;
  }
  .iframe-container iframe {
    width: 200%;
    height: 200%;
    transform: scale(0.5);
    transform-origin: 0 0;
    border: none;
    <!-- height: 520px; -->
    <!-- width: 100%; -->
  }
  img {
    filter: invert();
    width: 40px;
    height: 40px;
  }
  button {
    margin-left: 10px;
  }
</style>
<article>
  <div class="iframe-container">
    <iframe src={iframe_link} loading="lazy"></iframe>
  </div>
  <div>
    <!-- <progress value="40" max="100"></progress> -->
    <div style="display: flex; align-items: center;">
      <h1 style="margin: 0; flex: 1;">
        <a href={iframe_link} style="color: inherit;">{title}</a>
      </h1>
      <!-- <button> <img src="/download.svg" /> </button> -->
      <!-- <button> <img src="/play.svg" /> </button> -->
      <!-- <button> <img src="/fullscreen.svg"/> </button> -->
    </div>
    <section></section>
    <p><slot /></p>
  </div>
</article>
